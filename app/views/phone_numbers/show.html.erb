<p id="notice"><%= notice %></p>

<h2>Messages</h2>

Sent to <%= @phone_number.phone_number %>

<table>
  <thead>
    <tr>
      <th>SID</th>
      <th>From</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.sid %></td>
        <td><%= message.from %></td>
        <td><%= message.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back', phone_numbers_path %>
